# vi: filetype=gitconfig
[alias]
	ci = commit
	can = commit --amend --no-edit
	co = checkout
	dc = diff --cached
	sl = stash list --pretty=format:\"%gd - %cs - %s\"
	st = status
	br = branch
	msg = log --format=%B -n 1
	fpush = push --force-with-lease
	loglastpull = diff --stat master@{1} master
	l = log --color=always --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)C:%ci %C(green)A:%ai %C(bold blue)<%ae>%Creset <%ce>'
	# log today (use | grep "A:<date>" for author date)
	lt = l --since="yesterday"
	# list branches, but with dates (in descending order)
	lb = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)' #
	# https://www.durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
	ll = log --color=always --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]%Creset" --decorate --numstat
	la = !git l --all && 0
	lg = log --oneline --graph --decorate
	lga = log --oneline --graph --decorate --all
	# http://stackoverflow.com/questions/424071/list-all-the-files-for-a-commit-in-git
	shownames = diff-tree --no-commit-id --name-only -r
	subup = submodule update --init --recursive
	# http://stackoverflow.com/questions/12219604/list-git-tag-names-dates-and-messages
	tagv = for-each-ref --format='%(refname:short) %(objecttype) %(objectname) %(authordate:format:%Y-%m-%d-%H:%M:%S) %(subject) %(body)' refs/tags
	wdiff = diff --word-diff
	staash = stash --all
[branch]
	sort = -committerdate
[color]
	status = auto
	diff = always
	branch = auto
	interactive = auto
[color "diff"]
	old = "#FF0000"
	new = "#8AE234"
[color "status"]
	changed = "#FF0000"
	untracked = "#FF0000"
	added = "#8AE234"
[column]
	ui = auto
[commit]
	verbose = true
[core]
	editor = nvim
	attributesfile = ~/.config/git/attributes
[credential]
{% if yadm.os == "Darwin" %}
	helper = osxkeychain
{% else %}
	helper = cache
{% endif %}
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[include]
	path = ~/.config/git/identities/config
[init]
	templatedir = ~/.config/git/template
	defaultBranch = main
[log]
	date = iso
[merge]
	conflictStyle = zdiff3
[notes]
	displayRef = refs/notes/*
[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[remote "origin"]
	fetch = +refs/notes/*:refs/notes/*
[rerere]
	enabled = true
	autoupdate = true
[tag]
	sort = version:refname
